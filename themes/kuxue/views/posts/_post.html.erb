<div class='span-17 entry'>

	<div class='span-2'>
	   <a href="<%=user_post_path(post.user, post)%>" class="photo" :rel="bookmark"><%=image_tag((post.first_image_in_body || post.user.avatar_photo_url(:thumb)), :alt=>"", :width=>"50", :height=>"50")%></a> 
	</div>  
	<% if false %>
	<div class='span-3 last'>
	<ul class='p-auther'>
		<li class='fn'><%=link_to post.user.login, user_path(post.user)%></li>
		<li class='update'> <a href="<%=user_post_path(post.user, post)%>" :rel="bookmark"> <abbr class='published' title="<%=post.published_at%>"><%= post.published_at_display("%B %d, %Y")%></abbr></a></li>
		<li class='view'><%= :views.l%><%= "(#{post.view_count})"%></li>
		<li class='comment'><%=link_to :comments.l+" (#{post.comments.count})", user_post_path(post.user, post)+'#comments'%></li>
		</ul> 
	 </div> 
	<% end %> 

<div class='span-15 last'> 
	<div class="entry-title" id="post_<%=post.id%>"><%=link_to post.user.login, user_path(post.user),:class => 'ag'%> <%=link_to post.title, user_post_path(post.user, post), :rel => 'bookmark'%></div> 
	<%= truncate_words(post.post, 75, '...' )%> <%=link_to :read_more.l, user_post_path(post.user, post), :rel=> 'bookmark',:class => 'read-more'%><br />
   <span style='color:#999999'><%= post.published_at_display("%B %d, %Y")%> <%= :views.l%><%= "(#{post.view_count})"%> <%=:comments.l%><%="(#{post.comments.count})"%></span>
</div> 
</div>  
<hr /> 