<div class='span-16'>
	<h3><%=:sign_up.l%></h3>
	<%=error_messages_for :user%>
	<% form_for :user, :url => users_path, :html => {:class => 'MainForm'} do |f| -%>
	<p>
	<%=label_tag "user_login"%>
	<%=:username.l%><em><%=:required_your_username_must_not_contain_numerals_spaces_or_special_characters.l%></em><br />
	<%= f.text_field :login%></p><p>
	<%=label_tag "user_mail"%>
	<%=:e_mail_address.l%>
	<em><%=:required_we_will_send_a_confirmation_e_mail_to_the_address_you_enter.l%></em><br /> 
	<%= f.text_field :email%></p><p>
	<%=label_tag "user_password"%>
	<%=:type_your_password.l %><br />
	<%= f.password_field :password %></p><p>
	<%=label_tag "user_password_confirmation"%>
	<%=:re_type_your_password_to_confirm.l%><br />
	<%= f.password_field :password_confirmation%></p>
	<%= hidden_field_tag :inviter_id, params[:inviter_id]%>
	<%= hidden_field_tag :inviter_code, params[:inviter_code]%> 
	<p>
		<%= submit_tag :sign_up.l%>
	</p>
	<% end -%>
</div>   
<% content_for :sidebar do -%>             
<div class='span-8 last'>
   <h3><%=:why_sign_up.l%></h3>
	<ul>
		<li><%= :sign_up_reason_1.l%></li>
		<li><%= :sign_up_reason_2.l%></li>
	</ul>
   <h3><%=:tips.l %></h3>
<p><%=:after_signing_up_youll_receive_an_e_mail_confirmation_message.l%></p>
<p><%=:click_the_activation_link_in_the_e_mail_to_log_in.l%></p>
<p><%= link_to :already_have_an_account.l, "/login"%></p>
</div>  
<% end -%>