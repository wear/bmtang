<% content_for :sidebar do -%> 
	<%= render :partial => '/shared/group_sidebar' %>
<% end -%>  

<% content_for :head_tags do -%>
	<script type="text/javascript" charset="utf-8"> 
	$j(document).ready(function() {          
		$j('#tabs').tabs('option', 'selected', 1);
	 });    
	</script>
<% end -%>

<% content_for :tabs do -%>
  <li><a href='#tabs-content'>目录</a></li>
  <li><%=link_to @page.pretty_title,page_group_wiki_path(@group,:page => @page.title) %></li>
	<% (@group.wiki.pages - @page.to_a).each do |page| -%>
		<li><%=link_to page.title,page_group_wiki_path(@group,:page => page.title) %></li>
	<% end -%>                                                 
<% end -%>   

<h3>目录</h3>
<ul>
<% @group.wiki.pages.each do |page| -%>
	<li><%=link_to page.title,page_group_wiki_path(@group,:page => page.title) %></li>
<% end -%>
</ul>



<% html_title @page.pretty_title %>